datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  image     String?
  category String?
}

model Message {
  id        Int      @id @default(autoincrement())
  email     String
  message   String
  createdAt DateTime @default(now())
}